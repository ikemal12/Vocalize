{
    "manifest_version": 3,
    "name": "Reddit TTS",
    "description": "Text to speech on Reddit posts with the click of a button!",
    "version": "1.0",
    "icons": {
        "16": "images/icon16.jpg",
        "32": "images/icon32.jpg",
        "48": "images/icon48.jpg",
        "128": "images/icon128.jpg"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.jpg",
            "32": "images/icon32.jpg",
            "48": "images/icon48.jpg",
            "128": "images/icon128.jpg"
        }
    },
    "permissions": ["activeTab"]
  }